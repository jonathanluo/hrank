<?xml version="1.0" encoding="UTF-8"?>
<settings xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd"
          xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <!--
    This is an example settings.xml so you can define proxy server
    settings required to access default Maven repositories.
    Refer to online Maven documentation for more information on
    configuring settings.xml
    -->

    <proxies>
        <proxy>
            <active>true</active>
            <protocol>http</protocol>
            <host>your-proxy-host.com</host>
            <port>80</port>
            <nonProxyHosts>localhost|*.localaddress</nonProxyHosts>
        </proxy>
    </proxies>

</settings>