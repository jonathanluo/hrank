<?xml version="1.0"?>

<cache-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns="http://xmlns.oracle.com/coherence/coherence-cache-config"
              xsi:schemaLocation="http://xmlns.oracle.com/coherence/coherence-cache-config coherence-cache-config.xsd">

    <!-- Interceptor to bootstrap the application -->
    <interceptors>
        <interceptor>
            <instance>
                <class-name>com.tangosol.examples.rest.application.ApplicationBootstrapInterceptor</class-name>
            </instance>
        </interceptor>
    </interceptors>

    <caching-scheme-mapping>
        <cache-mapping>
            <cache-name>departments</cache-name>
            <scheme-name>RESTExample</scheme-name>
            <key-type>java.lang.String</key-type>
            <value-type>com.tangosol.examples.rest.model.Department</value-type>
        </cache-mapping>

        <cache-mapping>
            <cache-name>products</cache-name>
            <scheme-name>RESTExample</scheme-name>
            <key-type>java.lang.Long</key-type>
            <value-type>com.tangosol.examples.rest.model.Product</value-type>
        </cache-mapping>

        <cache-mapping>
            <cache-name>states</cache-name>
            <scheme-name>RESTExample</scheme-name>
            <key-type>java.lang.String</key-type>
            <value-type>com.tangosol.examples.rest.model.State</value-type>
        </cache-mapping>

        <cache-mapping>
            <cache-name>countries</cache-name>
            <scheme-name>RESTExample</scheme-name>
            <key-type>java.lang.String</key-type>
            <value-type>com.tangosol.examples.rest.model.Country</value-type>
        </cache-mapping>

        <cache-mapping>
            <cache-name>contacts</cache-name>
            <scheme-name>RESTExampleContacts</scheme-name>
            <key-type>com.tangosol.examples.pof.ContactId</key-type>
            <value-type>com.tangosol.examples.pof.Contact</value-type>
        </cache-mapping>

        <cache-mapping>
            <cache-name>static-content</cache-name>
            <scheme-name>RESTExample</scheme-name>
        </cache-mapping>

        <cache-mapping>
            <cache-name>json</cache-name>
            <scheme-name>RESTExample</scheme-name>
        </cache-mapping>
    </caching-scheme-mapping>

    <caching-schemes>
        <distributed-scheme>
            <scheme-name>RESTExample</scheme-name>
            <service-name>CoherenceRESTExample</service-name>
            <backing-map-scheme>
                <local-scheme>
                    <unit-calculator>BINARY</unit-calculator>
                    <expiry-delay>0</expiry-delay>
                </local-scheme>
            </backing-map-scheme>
            <autostart>true</autostart>
        </distributed-scheme>

        <distributed-scheme>
            <scheme-name>RESTExampleContacts</scheme-name>
            <service-name>CoherenceRESTExampleContacts</service-name>
            <serializer>pof</serializer>
            <backing-map-scheme>
                <local-scheme>
                    <unit-calculator>BINARY</unit-calculator>
                    <expiry-delay>0</expiry-delay>
                </local-scheme>
            </backing-map-scheme>
            <autostart>true</autostart>
        </distributed-scheme>

        <!--
        proxy scheme that allows extend clients to connect to the cluster over
        HTTP for rest requests.
        -->
        <proxy-scheme>
            <service-name>HttpProxyService</service-name>
            <acceptor-config>
                <http-acceptor>
                    <!-- use grizzly as this supports SSE -->
                    <class-name>com.tangosol.coherence.rest.server.GrizzlyHttpServer</class-name>
                    <local-address>
                        <address system-property="coherence.examples.rest.address">0.0.0.0</address>
                        <port    system-property="coherence.examples.rest.port">8080</port>
                    </local-address>

                    <!--
                    The coherence cache resources.
                    Only required as we define an "/application/" resource-config below.
                    The resources defined in coherence-rest-config.xml are using the default
                    resource config and therefore will get prefixed with /cache/
                    -->
                    <resource-config>
                        <context-path>/cache</context-path>
                        <instance>
                            <class-name>com.tangosol.coherence.rest.server.PassThroughResourceConfig</class-name>
                        </instance>
                    </resource-config>

                    <!-- the application content resources -->
                    <!-- eg: .html, .css, .js & .jpg files -->
                    <resource-config>
                        <context-path>/application/</context-path>
                        <instance>
                            <class-name>com.tangosol.examples.rest.application.ApplicationResourceConfig</class-name>
                        </instance>
                    </resource-config>
                </http-acceptor>
            </acceptor-config>
            <autostart system-property="coherence.examples.rest.enabled">false</autostart>
        </proxy-scheme>
    </caching-schemes>
</cache-config>